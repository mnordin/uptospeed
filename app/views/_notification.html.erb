<% unless flash.empty? %>
    <script type="text/javascript">
    <% if flash[:error] -%>
        alert("<%=h flash[:error] %>");
    <% end -%>
    <% if flash[:notice] -%>
        alert("<%=h flash[:notice] %>");
    <% end -%>
    <% if flash[:success] -%>
        alert("<%=h flash[:success] %>");
    <% end -%>
    </script>
<% end %>