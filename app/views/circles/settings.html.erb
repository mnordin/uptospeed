<div data-role="header" data-position="inline">
    <h1 data-title="Up to Speed">Inställningar för <%= @circle.title %></h1>
</div>
<div data-role="content" data-theme="b" class="ui-body-c">
    <%= form_for @circle, :'data-ajax' => "false" do |f| %>
        <%= f.fields_for :circle_memberships do |cm| %>
            <% if cm.object.user == current_user %>
                <%= cm.hidden_field :user_id %>
                <div data-role="fieldcontain">
                    <%= cm.label :share_score, "Visa din poäng inom cirkeln?" %>
                    <%= cm.select :share_score, options_for_select([["Nej", false], ["Ja", true]], cm.object.share_score), {}, :'data-role' => "slider" %>
                </div>
                <div data-role="fieldcontain">
                    <%= cm.label :color_id, "Cirkelfärg" %>
                    <%= cm.select :color_id, options_from_collection_for_select(@colors, "id", "color", cm.object.color_id) %>
                </div>
            <% end %>
        <% end %>
        <%= f.submit "Spara", :'data-theme' => "b" %>
    <% end %>
</div>